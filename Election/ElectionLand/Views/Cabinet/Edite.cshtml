@model ElectionLand.Models.User
@{
    ViewBag.Title = "Edit";
}

<form asp-action="edite" asp-controller="cabinet" asp-route-id="@Model.Id">
    <div><h3>Редагування</h3></div>
    <br />
    <div class="form-group">
        <label asp-for="FirstName" class="control-label">Ім'я</label>
        <input type="text" asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="control-label">Прізвище</label>
        <input type="text" asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Емейл</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Підтвердити" class="btn btn-default" />
    </div>
</form>