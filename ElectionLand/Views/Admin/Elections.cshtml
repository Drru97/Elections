@using ElectionLand.Models
@model IEnumerable<Election>
@{
    ViewData["Title"] = "Дільниці";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div><h1>Вибори</h1></div>
<div className="container">

    <div className="row">
        <div className="col-md-8">
            <h4><a asp-action="CreateElections" class="badge badge-dark">Додати вибори</a></h4>
            <table class="table table-hover">
                <tr><td><h3>Назва</h3></td><td><h3>Рік</h3></td><td><h3>Початок</h3></td><td><h3>Кінець</h3></td></tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Year</td>
                        <td>@item.StartElection</td>
                        <td>@item.EndElection</td>
                        <td><a asp-action="EditElections" asp-controller="Admin" asp-route-id="@item.Id"><span class="glyphicon glyphicon-edit"></span></a> </td>
                        <td><a asp-action="DeleteElections" asp-controller="Admin" asp-route-id="@item.Id"><span class="glyphicon glyphicon-remove"></span></a></td>
                    </tr>

                }
            </table>

        </div>
        <div className="col-md-4">

        </div>
        <a asp-action="Admin"><span>Back</span></a>
    </div>
</div>