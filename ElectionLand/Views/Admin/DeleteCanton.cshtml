@using ElectionLand.Models
@model VirtualCanton
@{
    ViewBag.Title = "Видалення округу";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div><h3>Видалення округу</h3> </div>
    <br />
    <dl class="dl-horizontal">
        <dt>Назва</dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>Адреса</dt>
        <dd>
            @Html.DisplayFor(model => model.Adress)
        </dd>

        <dt>Центр</dt>
        <dd>
            @Html.DisplayFor(model => model.Centre)
        </dd>
    </dl>

    <div>
        <form asp-action="DeleteCanton" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="DeleteDistrict" />
            </div>
        </form>
    </div>
</div>