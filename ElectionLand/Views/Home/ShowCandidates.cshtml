@model IEnumerable<ElectionLand.Models.Candidate>
@{
    ViewData["Title"] = "ShowCandidates";
}

<br />
<div><h1>Candidates</h1></div>
<div className="container">

    <div className="row">
        <div className="col-md-8">
            <table class="table table-hover">
                <tr><td><h3>≤Ім'я</h3></td><td><h3>Номер в списку</h3></td><td><h3>Вибори</h3></td></tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.User.FirstName</td>
                        <td>@item.NumberInTheList</td>
                        <td>@item.Election.Title</td>
                    </tr>

                }
            </table>

        </div>
        <div className="col-md-4">

        </div>

    </div>
</div>
